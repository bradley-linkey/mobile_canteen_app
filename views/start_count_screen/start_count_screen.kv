#:kivy 1.10.0

<Start_Count_Screen>:
    name: '_start_count_screen_'

    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: rgba('#72B7CD')
            Rectangle:
                pos: self.pos
                size: self.size


        Widget:
            size_hint_y: .05

        BoxLayout:
            size_hint_x: 1
            size_hint_y: .1

            Button:
                size_hint_x: 0.7
                text: 'This is a dropdown'

            TextInput:
                size_hint_x: 0.3
                text_hint: 'count'
                font_size: '12dp'

        Widget:
            size_hint_y: .05

        BoxLayout:
            size_hint_x: 1
            size_hint_y: .5

            Label:
                text: 'This is a listview'
                font_size: '12dp'
                canvas.before:
                    Color:
                        rgba: rgba('#FFFFFF')
                    Rectangle:
                        pos: self.pos
                        size: self.size

        Widget:
            size_hint_y: .1
            
        BoxLayout:
            size_hint_x: 1
            size_hint_y: .1

            Button:
                text: 'Clear'
            
            Button:
                text: 'Submit'
        
        Widget:
            size_hint_y: .1